<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        <link rel="stylesheet" type="text/css" href="/resources/mirror.css" media="screen" />
        <link rel="shortcut icon" href="/resources/favicon.ico" />
        <title>{{ static.title }}</title>
    </head>
    <body>
        <h1>{{ static.title }}</h1>
        <table id="mirror-site-table" cellpadding="0" cellspacing="0">
            <colgroup>
                <col width="50%"/>
                <col width="25%"/>
                <col width="25%"/>
            </colgroup>
            <thead>
                <tr>
                    <th>{{ static.mirror_name }}</th>
                    <th>{{ static.update_time }}</th>
                    <th>{{ static.help }}</th>
                </tr>
            </thead>
            <tbody>
                {% for ms in mirror_site_list %}
                    <tr class="odd">
                        {% if ms.available %}
                            <td><span>ms.id</span></td>
                            <td>N/A</td>
                        {% else %}
                            <td><a href="/{{ ms.id }}">ms.id</a></td>
                            <td>{{ ms.last_update_time}}</td>
                        {% endif %}
                        {% if ms.has_help %}
                            <td><span>N/A</span></td>
                        {% else %}
                            <td><a href="/.help/{{ ms.helpFile }}">{{ ms.helpFileTitle }}</a></td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </body>
</html>
