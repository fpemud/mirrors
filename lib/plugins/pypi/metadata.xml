<?xml version="1.0" encoding="utf-8"?>
<plugin id="pypi">
  <public-mirror-database id="pypi">
    <filename>plugin.py</filename>
    <classname>Database</classname>
  </public-mirror-database>
  <file-mirror id="pypi">
    <name>PyPI</name>
    <data-directory>pypi</data-directory>
    <updater>
      <filename>plugin.py</filename>
      <classname>Updater</classname>
      <cron-expression>0 0 * * 0</cron-expression>
      <runtime>thread</runtime>
    </updater>
    <advertiser>
      <protocol>http</protocol>
      <protocol>ftp</protocol>
    </advertiser>
  </file-mirror>
</plugin>
