<?xml version="1.0" encoding="utf-8"?>
<plugin id="pypi">
  <public-mirror-database id="pypi">
    <json-file type="extended">db-extended.json</json-file>
  </public-mirror-database>
  <file-mirror id="pypi">
    <name>PyPI</name>
    <data-directory>pypi</data-directory>
    <updater>
      <executable>plugin.py</executable>
      <cron-expression>0 0 * * 0</cron-expression>
    </updater>
    <advertiser>
      <protocol>http</protocol>
      <protocol>ftp</protocol>
    </advertiser>
  </file-mirror>
</plugin>
