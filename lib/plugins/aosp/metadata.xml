<?xml version="1.0" encoding="utf-8"?>
<plugin id="aosp">
  <git-mirror id="aosp">
    <name>AOSP</name>
    <data-directory>aosp</data-directory>
    <initializer>
      <filename>plugin.py</filename>
      <classname>Initializer</classname>
      <runtime>thread</runtime>
    </initializer>
    <updater>
      <filename>plugin.py</filename>
      <classname>Updater</classname>
      <cron-expression>0 0 * * 0</cron-expression>
      <runtime>thread</runtime>
    </updater>
    <advertiser>
      <!--<protocol>git</protocol>-->
      <protocol>http</protocol>
    </advertiser>
  </git-mirror>
</plugin>
