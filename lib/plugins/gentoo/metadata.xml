<?xml version="1.0" encoding="utf-8"?>
<plugin id="gentoo">
  <mirror-site id="gentoo">
    <name>Gentoo Source Mirror</name>
    <data-directory>gentoo</data-directory>
    <public-mirror-database>
      <filename>plugin.py</filename>
      <classname>Db</classname>
    </public-mirror-database>
    <updater>
      <filename>plugin.py</filename>
      <classname>PeriodicalUpdater</classname>
      <scheduler>periodical</scheduler>
      <cron-expression>0 */4 * * *</cron-expression>
    </updater>
    <advertiser>
      <protocol>http</protocol>
      <protocol>ftp</protocol>
    </advertiser>
  </mirror-site>
  <mirror-site id="gentoo-portage">
    <name>Gentoo Portage</name>
    <data-directory>gentoo-portage</data-directory>
    <public-mirror-database>
      <filename>plugin.py</filename>
      <classname>PortageDb</classname>
    </public-mirror-database>
    <updater>
      <filename>plugin.py</filename>
      <classname>PortagePerodicalUpdater</classname>
      <scheduler>follow</scheduler>
      <follow-mirror-site>gentoo</follow-mirror-site>
    </updater>
    <advertiser>
      <protocol>rsync</protocol>
    </advertiser>
  </mirror-site>
</plugin>
