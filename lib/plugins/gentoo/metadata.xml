<?xml version="1.0" encoding="utf-8"?>
<plugin id="gentoo">
  <public-mirror-database id="gentoo">
    <json-file type="official">db-official.json</json-file>
    <json-file type="extended">db-extended.json</json-file>
  </public-mirror-database>
  <public-mirror-database id="gentoo-portage">
    <json-file type="official">db-portage-official.json</json-file>
    <json-file type="extended">db-portage-extended.json</json-file>
  </public-mirror-database>
  <file-mirror id="gentoo">
    <name>Gentoo Source Mirror</name>
    <data-directory>gentoo</data-directory>
    <initializer>
      <filename>plugin.py</filename>
      <classname>InitAndUpdater</classname>
    </initializer>
    <updater>
      <filename>plugin.py</filename>
      <classname>InitAndUpdater</classname>
      <cron-expression>0 */4 * * *</cron-expression>
    </updater>
    <advertiser>
      <protocol>http</protocol>
      <protocol>ftp</protocol>
    </advertiser>
  </file-mirror>
  <file-mirror id="gentoo-portage">
    <name>Gentoo Portage</name>
    <data-directory>gentoo-portage</data-directory>
    <initializer>
      <filename>plugin.py</filename>
      <classname>InitAndUpdater</classname>
    </initializer>
    <updater>
      <filename>plugin.py</filename>
      <classname>InitAndUpdater</classname>
      <cron-expression>0 */4 * * *</cron-expression>
    </updater>
    <advertiser>
      <protocol>rsync</protocol>
    </advertiser>
  </file-mirror>
</plugin>
